{
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
  },
  "rules": {
    "eol-last": [2, "always"],
    "semi": 2,
    "no-undef": 2,
    "no-unused-vars": 1,
    "comma-dangle": [1, "always-multiline"],
    "import/no-unresolved": 0,
    "react/react-in-jsx-scope": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2
  },
  "plugins": [
    "react"
  ]
}
